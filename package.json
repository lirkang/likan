{
  "name": "Likan",
  "displayName": "Likan",
  "description": "这是一个对 vscode 所缺少的功能补全的插件...",
  "publisher": "Likan",
  "version": "0.7.74",
  "author": {
    "name": "likan"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lirkang/likan"
  },
  "galleryBanner": {
    "color": "#424243",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "main": "./lib/index.js",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "public/likan.png",
  "keywords": [
    "Snippets",
    "Suggestion"
  ],
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "likan.other.select",
        "title": "选择命令运行",
        "shortTitle": "递归搜索package.json以寻找可执行的命令",
        "category": "likan"
      },
      {
        "command": "likan.other.color",
        "title": "随机生成工作区颜色",
        "shortTitle": "随机生成工作区颜色, 保存在工作区/.vscode/settings.json中",
        "category": "likan"
      },
      {
        "command": "likan.other.terminal",
        "title": "切换显示终端",
        "icon": "$(terminal)",
        "category": "likan"
      },
      {
        "command": "likan.open.workspace",
        "title": "选择项目",
        "shortTitle": "快速搜索打开项目",
        "category": "likan"
      },
      {
        "command": "likan.open.browser",
        "title": "在默认浏览器打开",
        "icon": "$(globe)",
        "category": "likan",
        "enablement": "resourceLangId == html || resourceLangId == htm"
      },
      {
        "command": "likan.open.window",
        "title": "在新窗口中打开",
        "category": "likan"
      },
      {
        "command": "likan.language.wrap",
        "title": "插入标签",
        "category": "likan",
        "enablement": "resourceLangId == html || resourceLangId == htm || resourceLangId == javascriptreact || resourceLangId == typescriptreact || resourceLangId == vue || resourceLangId == xml || resourceLangId == svg"
      },
      {
        "command": "likan.language.comment",
        "title": "在文件头生成注释",
        "shortTitle": "生成文档注释(author)可以自定义",
        "category": "likan",
        "enablement": "resourceLangId == javascript || resourceLangId == typescript || resourceLangId == javascriptreact || resourceLangId == typescriptreact"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "likan.open.browser",
          "group": "navigation@1",
          "when": "resourceLangId == html || resourceLangId == htm"
        },
        {
          "command": "likan.other.terminal",
          "group": "navigation@0",
          "when": "config.likan.show.terminal"
        }
      ],
      "explorer/context": [
        {
          "command": "likan.open.browser",
          "group": "navigation@1",
          "when": "resourceLangId == html || resourceLangId == htm"
        },
        {
          "command": "likan.open.window",
          "group": "navigation@1"
        }
      ],
      "editor/context": [
        {
          "command": "likan.other.select",
          "group": "navigation@0"
        },
        {
          "command": "likan.open.browser",
          "group": "navigation@1",
          "when": "resourceLangId == html || resourceLangId == htm"
        }
      ]
    },
    "keybindings": [
      {
        "key": "alt+shift+w",
        "command": "likan.language.wrap",
        "when": "editorFocus"
      },
      {
        "key": "alt+shift+x",
        "command": "likan.language.comment",
        "when": "editorFocus"
      }
    ],
    "configuration": {
      "title": "likan",
      "properties": {
        "likan.string.manager": {
          "type": "string",
          "enum": [
            "npm",
            "yarn",
            "pnpm"
          ],
          "default": "npm",
          "description": "包管理工具"
        },
        "likan.string.author": {
          "type": "string",
          "description": "插入注释时显示的Author字段值",
          "default": "likan"
        },
        "likan.show.terminal": {
          "type": "boolean",
          "description": "是否在标题栏显示Terminal",
          "default": true
        },
        "likan.show.fileSize": {
          "type": "boolean",
          "description": "是否在状态栏显示文件大小",
          "default": true
        },
        "likan.show.memory": {
          "type": "boolean",
          "description": "是否在状态栏显示内存占用",
          "default": true
        },
        "likan.list.tags": {
          "type": "array",
          "description": "插入标签时展示的候选标签",
          "default": [
            "div",
            "span",
            "template"
          ]
        },
        "likan.list.exts": {
          "type": "array",
          "description": "查询跳转时自动检索后缀名",
          "default": [
            ".js",
            ".ts",
            ".jsx",
            ".tsx"
          ]
        },
        "likan.list.alias": {
          "type": "object",
          "description": "路径跳转和路径提示(暂未开发)的别名映射, ${root}代表工作区根目录",
          "default": {
            "@": "${root}/src",
            "~": "${root}"
          }
        },
        "likan.list.folders": {
          "type": "array",
          "description": "打开项目时需要检索的目录"
        }
      }
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./public/snippets.json"
      },
      {
        "language": "javascriptreact",
        "path": "./public/snippets.json"
      },
      {
        "language": "typescript",
        "path": "./public/snippets.json"
      },
      {
        "language": "typescriptreact",
        "path": "./public/snippets.json"
      },
      {
        "language": "vue",
        "path": "./public/snippets.json"
      },
      {
        "language": "html",
        "path": "./public/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "cross-env NODE_ENV=production webpack --profile --progress",
    "develop": "cross-env NODE_ENV=development webpack --watch",
    "preview": "cross-env NODE_ENV=test webpack --profile --progress",
    "release": "standard-version",
    "commit": "cz",
    "format": "prettier -w .",
    "lint": "eslint --fix .",
    "precommit": "run-s format lint"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.2.8",
    "typescript": "^4.5.5",
    "webpack": "^5.70.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^3.4.1",
    "open": "^8.4.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard-version": {},
  "volta": {
    "node": "16.17.0",
    "yarn": "1.22.19",
    "npm": "8.15.0"
  }
}
