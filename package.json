{
  "name": "Likan",
  "displayName": "Likan",
  "description": "这是一个对 vscode 所缺少的功能补全的插件...",
  "publisher": "Likan",
  "version": "0.9.15",
  "author": {
    "name": "likan"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lirkang/likan"
  },
  "galleryBanner": {
    "color": "#424243",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "main": "./lib/index.js",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "public/images/likan.png",
  "keywords": [],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:likan.open.defaultBrowser",
    "onCommand:likan.language.wrap",
    "onCommand:likan.language.comment",
    "onCommand:likan.open.currentWindow",
    "onCommand:likan.open.newWindow",
    "onCommand:likan.refresh.explorer",
    "onView:likan.other.gitignore",
    "onCommand:likan.open.specifyBrowser",
    "onCommand:likan.other.changeCase",
    "onView:likan-explorer"
  ],
  "contributes": {
    "commands": [
      {
        "command": "likan.open.defaultBrowser",
        "title": "在默认浏览器打开",
        "icon": "$(globe)",
        "category": "likan",
        "enablement": "resourceLangId in likan.htmlId || editorLangId in likan.htmlId && !isInDiffEditor"
      },
      {
        "command": "likan.open.specifyBrowser",
        "title": "在指定浏览器打开",
        "category": "likan",
        "enablement": "resourceLangId in likan.htmlId || editorLangId in likan.htmlId && !isInDiffEditor"
      },
      {
        "command": "likan.open.currentWindow",
        "title": "在新窗口中打开",
        "category": "likan"
      },
      {
        "command": "likan.open.newWindow",
        "title": "在当前窗口中打开",
        "category": "likan"
      },
      {
        "command": "likan.other.trimWhitespace",
        "title": "清空左侧的空格和换行符",
        "category": "likan",
        "enablement": "editorTextFocus && config.likan.show.trimWhitespace && !editorReadonly"
      },
      {
        "command": "likan.language.wrap",
        "title": "插入标签",
        "category": "likan",
        "enablement": "editorLangId in likan.wrapId && !editorReadonly"
      },
      {
        "command": "likan.language.comment",
        "title": "在文件头生成注释",
        "category": "likan",
        "enablement": "editorLangId in likan.languageId && !editorReadonly"
      },
      {
        "command": "likan.refresh.explorer",
        "icon": "$(refresh)",
        "title": "刷新",
        "category": "likan"
      },
      {
        "command": "likan.other.gitignore",
        "title": "添加.gitignore",
        "category": "likan",
        "enablement": "workspaceFolderCount > 0"
      },
      {
        "command": "likan.other.changeCase",
        "title": "修改单词格式",
        "category": "likan",
        "enablement": "editorIsOpen && !editorReadonly"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "likan-explorer",
          "name": "Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "likan.refresh.explorer",
          "group": "navigation@0",
          "when": "view == likan-explorer"
        }
      ],
      "view/item/context": [
        {
          "command": "likan.open.newWindow",
          "group": "navigation@1",
          "when": "view == likan-explorer"
        },
        {
          "command": "likan.open.currentWindow",
          "group": "navigation@0",
          "when": "view == likan-explorer"
        }
      ],
      "editor/title": [
        {
          "command": "likan.open.defaultBrowser",
          "group": "navigation@1",
          "when": "editorLangId in likan.htmlId"
        }
      ],
      "explorer/context": [
        {
          "command": "likan.open.defaultBrowser",
          "group": "navigation@0",
          "when": "resourceLangId in likan.htmlId"
        },
        {
          "command": "likan.open.specifyBrowser",
          "group": "navigation@0",
          "when": "resourceLangId in likan.htmlId"
        },
        {
          "command": "likan.open.currentWindow",
          "group": "navigation@1",
          "when": "!explorerResourceIsRoot"
        }
      ],
      "editor/context": [
        {
          "command": "likan.open.defaultBrowser",
          "group": "navigation@0",
          "when": "editorLangId in likan.htmlId"
        },
        {
          "command": "likan.open.specifyBrowser",
          "group": "navigation@0",
          "when": "editorLangId in likan.htmlId"
        }
      ],
      "commandPalette": [
        {
          "command": "likan.other.trimWhitespace",
          "when": "false"
        },
        {
          "command": "likan.refresh.explorer",
          "when": "false"
        },
        {
          "command": "likan.open.currentWindow",
          "when": "false"
        },
        {
          "command": "likan.open.newWindow",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "key": "alt+shift+w",
        "command": "likan.language.wrap",
        "when": "resourceLangId in likan.wrapId && !editorReadonly"
      },
      {
        "key": "alt+shift+x",
        "command": "likan.language.comment",
        "when": "resourceLangId in likan.languageId && !editorReadonly"
      },
      {
        "key": "backspace",
        "command": "likan.other.trimWhitespace",
        "when": "editorTextFocus && config.likan.show.trimWhitespace && !editorReadonly"
      },
      {
        "key": "ctrl+shift+alt+c",
        "command": "likan.other.changeCase",
        "when": "editorIsOpen && !editorReadonly"
      }
    ],
    "configuration": {
      "title": "likan",
      "properties": {
        "likan.enum.manager": {
          "type": "string",
          "enum": [
            "npm",
            "yarn",
            "pnpm"
          ],
          "default": "npm",
          "description": "包管理工具"
        },
        "likan.string.author": {
          "type": "string",
          "description": "插入注释时显示的Author字段值",
          "default": "likan"
        },
        "likan.show.fileSize": {
          "type": "boolean",
          "description": "是否在状态栏显示文件大小",
          "default": true
        },
        "likan.show.memory": {
          "type": "boolean",
          "description": "是否在状态栏显示内存占用",
          "default": true
        },
        "likan.string.tag": {
          "type": "string",
          "description": "插入标签时的默认标签",
          "default": "div"
        },
        "likan.list.exts": {
          "type": "array",
          "description": "查询跳转时自动检索后缀名",
          "default": [
            ".js",
            ".ts",
            ".jsx",
            ".tsx",
            ".vue"
          ]
        },
        "likan.list.alias": {
          "type": "object",
          "description": "路径跳转的别名映射, ${root}代表工作区根目录",
          "default": {
            "@": "${root}/src",
            "~": "${root}"
          }
        },
        "likan.list.folders": {
          "type": "array",
          "description": "explorer需要检索的目录",
          "default": []
        },
        "likan.list.filterFolders": {
          "type": "array",
          "description": "explorer中过滤的关键字",
          "default": [
            "node_modules",
            ".vscode",
            ".git",
            ".svn"
          ]
        },
        "likan.show.trimWhitespace": {
          "type": "boolean",
          "description": "是否在键入backspace时自动删除空白",
          "default": true
        }
      }
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./public/configurations/snippets.json"
      },
      {
        "language": "javascriptreact",
        "path": "./public/configurations/snippets.json"
      },
      {
        "language": "typescript",
        "path": "./public/configurations/snippets.json"
      },
      {
        "language": "typescriptreact",
        "path": "./public/configurations/snippets.json"
      },
      {
        "language": "vue",
        "path": "./public/configurations/snippets.json"
      },
      {
        "language": "html",
        "path": "./public/configurations/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm package",
    "package": "cross-env NODE_ENV=production webpack",
    "develop": "cross-env NODE_ENV=development webpack --watch",
    "preview": "cross-env NODE_ENV=test webpack --profile --progress",
    "patch": "standard-version -a -r patch",
    "minor": "standard-version -a -r minor",
    "major": "standard-version -a -r major",
    "format": "prettier ./*.js ./src/**/* -w -u --cache",
    "fix": "pnpm format && pnpm lint",
    "lint": "eslint ./src/**/* --fix --cache --cache-location ./node_modules/.cache/eslint/.eslintcache --cache-strategy content",
    "commit": "cz",
    "precommit": "pnpm fix"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.22.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.2.8",
    "typescript": "~4.7",
    "webpack": "^5.70.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "node-fetch": "^3.2.10",
    "open": "^8.4.0"
  },
  "vsce": {
    "dependencies": false,
    "yarn": false
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard-version": {
    "scripts": {
      "precommit": "git add .",
      "prerelease": "npm run fix",
      "posttag": "git push --follow-tags origin dev"
    }
  },
  "volta": {
    "node": "16.17.0",
    "yarn": "1.22.19",
    "npm": "8.15.0"
  }
}
