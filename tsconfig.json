{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": false,
    "strict": true,
    "baseUrl": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "outDir": "dist"
  },
  "include": ["./scripts/", "./src/"],
  "exclude": ["node_modules", "dist", "lib"]
}
