{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": false,
    "strict": true,
    "baseUrl": "./",
    "removeComments": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist"
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["**/node_modules", "dist", "lib"]
}
